	Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ
	               |	ТранзакцииСумм.Счет КАК Счет,
	               |	ТранзакцииСумм.Сумма КАК Сумма,
	               |	ТранзакцииСумм.Описание КАК Описание
	               |ИЗ
	               |	Документ.ТранзакцииСумм КАК ТранзакцииСумм
	               |ГДЕ
	               |	ТранзакцииСумм.ВладелецТранзакцииСумм = &ВладелецТранзакцииСумм"; 
	Запрос.УстановитьПараметр("ВладелецТранзакцииСумм",ДанныеJSON.userName);
